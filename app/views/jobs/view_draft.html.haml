.container
  
  %div
  / %a{:href => "#"}
  /   %button.btn.btn-primary{:style => "width: 50%;"} Update Jobs
  .container.inner-container{:style => "background-color: transparent; height:auto;margin-bottom: 0;padding-bottom: 0;"}
    %img{:src => "/assets/banner.jpg"}/
  .container.inner-container{:style => "background-color: #fff; margin-top:0;"}
    %h6{:style => 'font-size:24px;'} Saved Drafts on Device
    %a{:href => "#"}
    - if @jobs.present?
      - @jobs.each do |job|
        %button.btn{:style => "border-radius: 0; height: 55px; width: 100%; margin-bottom: 2px;", :onclick => "current_job_id = #{job.id};current_job_type='draft'; return reload('entry');"}
          %table
            %tr
              %td{:style => 'text-align:left; width:78px;'}
                %h5{:style => 'font-size:12px;'} #{job.qmnum}
              %td{:style=>'width:294px; paddin: 0;text-align:left;'}
                %p{:style => "font-size: 12px; margin: 0;"}= ("#{job.address} (#{job.job})").truncate(52)
      %button.btn{:style => "width: 50%; margin-top: 15px; margin-left: 10px; margin-bottom: 20px;", :onclick => 'updateJobs("settings");'}
        %b Advanced Settings